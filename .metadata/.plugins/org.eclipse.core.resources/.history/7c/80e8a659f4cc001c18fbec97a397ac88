package com.kh.datastructure;

public class Array {
	public void method1() {
		int[] lotto = new int [6]; // 6개의 정수값을 넣을 수 있는 배열 선언과 생성
		
		for (int i = 0; i < lotto.length; i++) { // for문을 이용하여 배열에 랜덤값 넣기
			lotto [i] = (int)(Math.random() * 45) + 1; // 1~46까지의 임의의 수를 받는다.
			
			// 로또 중복값 제거
			for (int j = 0; j < i; j++) {
				if(lotto[i] == lotto[j]) { // 중복된 값이 있으면 
					i--;
					break; // 이전 for문으로 돌아가 다시 배열에 랜덤값 넣는다.
				}
			}
			
		}
		 System.out.print("로또 번호 : ");
		 
		for (int i = 0; i < lotto.length; i++) {
			System.out.print(lotto[i] + " ");
		}
		
	
	}
}
