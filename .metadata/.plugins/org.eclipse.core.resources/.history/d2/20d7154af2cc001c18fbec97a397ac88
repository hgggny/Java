package com.kh.datastructure;

public class Array {
	public void method1() {
		int[] lotto = new int [6]; // 6개의 정수값을 넣을 수 있는 배열 선언과 생성
		
		for (int i = 0; i < lotto.length; i++) { // for문을 이용하여 배열에 랜덤값 넣기
			lotto [i] = (int)(Math.random() * 45) + 1; // Math.random() : 0.0 ~ 0.9까지 범위
			
			// 로또 중복값 제거
			for (int j = 0; j < i; j++) {
				if(lotto[i] == lotto[j]) {
					i--;
					break; // 로또 중복값 제거하는 for문에서 나가서 다시 배열에 랜덤값 넣게 하는 break;
				}
			}
			
		}
		
		for (int i = 0; i < lotto.length; i++) {
			
			System.out.printf("로또 번호 : %d", lotto[i]);
		}
		
	
	}
}
